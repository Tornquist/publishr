%nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"type" => "button",
        "data-toggle" => "collapse",
        "data-target" => "#navbar",
        "aria-expanded" => "false",
        "aria-controls" => "navbar"}
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Publishr", "#", class: "navbar-brand"
    .navbar-collapse.collapse#navbar
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to (fa_icon("book")+" Library"), "#"
        - if user_signed_in?
          %li
            = link_to (fa_icon("leanpub")+" My Books"), "#"
          %li
            = link_to (fa_icon("user")+" My Profile"),
              user_profile_path(current_user)
          %li
            = link_to (fa_icon("sign-out")+" Sign Out"),
              destroy_user_session_path, method: :delete
        - else
          %li
            = link_to (fa_icon("sign-in")+" Sign In"), new_user_session_path
